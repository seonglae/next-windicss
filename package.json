{
  "name": "next-windicss",
  "displayName": "Next WindiCSS",
  "description": "Next js & WindiCSS Boilerplate",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm lint && next dev --port 1234",
    "start": "next start --port 1234",
    "css": "windicss-analysis",
    "lint": "eslint ./src/**/*.{ts,tsx} --ignore-path .gitignore --fix",
    "build": "pnpm lint && next build"
  },
  "author": {
    "name": "Seonglae Cho",
    "email": "sungle3737@gmail.com"
  },
  "browserslist": [
    "since 2017"
  ],
  "engines": {
    "node": ">=v14.21.3"
  },
  "husky": {
    "hooks": {
      "post-merge": "pnpm i",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src}/**/*.{ts,tsx}": [
      "eslint --fix --ignore-path .gitignore"
    ],
    "{src}/**/*.{md,ts,tsx}": [
      "prettier --write --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "next": "^11.1.4",
    "next-seo": "^5.15.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "use-dark-mode": "^2.3.1",
    "zustand": "^3.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/eslint-parser": "^7.22.11",
    "@next/eslint-plugin-next": "^12.3.4",
    "@types/node": "^14.18.56",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.65",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5",
    "windicss": "^3.5.6",
    "windicss-analysis": "^0.3.5",
    "windicss-webpack-plugin": "^1.7.8"
  }
}
